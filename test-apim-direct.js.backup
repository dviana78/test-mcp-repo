// Usando la clave que obtuvimos anteriormente
const subscriptionKey = 'd5fde29d155f4f0194e259d07818ec61';

const options = {
    hostname: 'apim-dviana78-dev.azure-api.net',
    port: 443,
    path: '/swapi/v1/people/',
    method: 'GET',
    headers: {
        'Ocp-Apim-Subscription-Key': subscriptionKey,
