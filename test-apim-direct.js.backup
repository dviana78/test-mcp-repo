    }
};

console.log(`ğŸ”‘ Usando clave: ${subscriptionKey}`);
console.log(`ğŸŒ URL: https://${options.hostname}${options.path}`);

const req = https.request(options, (res) => {
    console.log(`ğŸ“¡ Status de APIM: ${res.statusCode}`);
    console.log(`ğŸ“‹ Headers de respuesta:`);
    Object.keys(res.headers).forEach(key => {
        console.log(`   ${key}: ${res.headers[key]}`);
    });
    
    let data = '';
    res.on('data', (chunk) => {
        data += chunk;
    });
    
    res.on('end', () => {
        if (res.statusCode === 200) {
            try {
                const jsonData = JSON.parse(data);
                console.log(`âœ… APIM funciona correctamente`);
                console.log(`ğŸ“Š Total de personajes: ${jsonData.count}`);
                console.log(`ğŸ‘¥ Primeros personajes:`);
