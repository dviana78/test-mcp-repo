const { spawn } = require('child_process');

console.log('ğŸ” Verificando ConfiguraciÃ³n de la API de Star Wars');
console.log('==================================================\n');

const server = spawn('node', ['dist/index.js'], {
  stdio: ['pipe', 'pipe', 'pipe'],
  cwd: process.cwd()
});

let buffer = '';
let requestId = 1;

function sendRequest(method, params = {}) {
  const request = {
    jsonrpc: '2.0',
    id: requestId++,
    method: method,
    params: params
  };
  
  console.log(`ğŸ“¤ Enviando: ${method}`);
  server.stdin.write(JSON.stringify(request) + '\n');
}

server.stdout.on('data', (data) => {
  buffer += data.toString();
  
  const lines = buffer.split('\n');
  buffer = lines.pop();
  
  lines.forEach(line => {
    if (line.trim()) {
      try {
        const response = JSON.parse(line);
        
        if (response.result) {
          if (response.result.serverInfo) {
            console.log('âœ… Servidor MCP inicializado\n');
          } else if (response.result.content) {
            response.result.content.forEach(content => {
              if (content.text) {
                try {
                  const data = JSON.parse(content.text);
                  
                  if (data.api) {
                    console.log('ğŸ“‹ ConfiguraciÃ³n de la API:');
                    console.log(`   ID: ${data.api.id}`);
                    console.log(`   Nombre: ${data.api.displayName}`);
                    console.log(`   Path: ${data.api.path}`);
                    console.log(`   Service URL: ${data.api.serviceUrl}`);
                    console.log(`   Protocolos: ${data.api.protocols?.join(', ')}`);
                    console.log(`   SuscripciÃ³n requerida: ${data.api.subscriptionRequired ? 'SÃ­' : 'No'}`);
                    
                    // Construir URL completa
                    const baseUrl = `https://apim-dviana78-dev.azure-api.net`;
                    const fullPath = data.api.path ? `/${data.api.path}` : '';
                    console.log(`   ğŸŒ URL Base: ${baseUrl}${fullPath}`);
                  } else if (data.operations) {
                    console.log('\nğŸ”§ Operaciones disponibles:');
                    data.operations.forEach((op, index) => {
                      console.log(`   ${index + 1}. ${op.method} ${op.urlTemplate || op.path}`);
                      console.log(`      Nombre: ${op.displayName || op.name}`);
                    });
                  } else if (data.subscription) {
                    console.log('\nğŸ”‘ Detalles de la suscripciÃ³n:');
                    console.log(`   ID: ${data.subscription.id}`);
                    console.log(`   Estado: ${data.subscription.state}`);
                    console.log(`   Clave primaria: ${data.subscription.primaryKey || 'No visible'}`);
                  }
                } catch (e) {
                  console.log('ğŸ“ Respuesta:', content.text);
                }
              }
            });
          }
        } else if (response.error) {
          console.log(`âŒ Error: ${response.error.message}`);
        }
      } catch (e) {
        // Ignorar lÃ­neas que no son JSON vÃ¡lidas
      }
    }
  });
});

