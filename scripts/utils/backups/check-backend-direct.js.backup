const https = require('https');

console.log('🔍 Verificando Backend Service Direct');
console.log('====================================');

// Verificar el backend directo de Star Wars API
const options = {
    hostname: 'swapi.dev',
    port: 443,
    path: '/api/people/',
    method: 'GET',
    headers: {
        'User-Agent': 'Node.js Backend Check'
    }
};

const req = https.request(options, (res) => {
    console.log(`📡 Status del backend: ${res.statusCode}`);
    console.log(`📋 Headers:`, res.headers);
    
    let data = '';
    res.on('data', (chunk) => {
        data += chunk;
    });
    
    res.on('end', () => {
        try {
            const jsonData = JSON.parse(data);
            console.log(`✅ Backend funciona correctamente`);
            console.log(`📊 Total de personajes: ${jsonData.count}`);
            console.log(`👥 Primeros personajes:`);
            jsonData.results.slice(0, 3).forEach((character, index) => {
                console.log(`   ${index + 1}. ${character.name}`);
            });
        } catch (error) {
            console.log(`❌ Error parseando respuesta: ${error.message}`);
            console.log(`📄 Respuesta cruda:`, data.substring(0, 500));
        }
    });
});

req.on('error', (error) => {
    console.log(`❌ Error conectando al backend: ${error.message}`);
});

req.end();