const https = require('https');

console.log('ğŸ” Verificando Backend Service Direct');
console.log('====================================');

// Verificar el backend directo de Star Wars API
const options = {
    hostname: 'swapi.dev',
    port: 443,
    path: '/api/people/',
    method: 'GET',
    headers: {
        'User-Agent': 'Node.js Backend Check'
    }
};

const req = https.request(options, (res) => {
    console.log(`ğŸ“¡ Status del backend: ${res.statusCode}`);
    console.log(`ğŸ“‹ Headers:`, res.headers);
    
    let data = '';
    res.on('data', (chunk) => {
        data += chunk;
    });
    
    res.on('end', () => {
        try {
            const jsonData = JSON.parse(data);
            console.log(`âœ… Backend funciona correctamente`);
            console.log(`ğŸ“Š Total de personajes: ${jsonData.count}`);
            console.log(`ğŸ‘¥ Primeros personajes:`);
            jsonData.results.slice(0, 3).forEach((character, index) => {
                console.log(`   ${index + 1}. ${character.name}`);
            });
        } catch (error) {
            console.log(`âŒ Error parseando respuesta: ${error.message}`);
            console.log(`ğŸ“„ Respuesta cruda:`, data.substring(0, 500));
        }
    });
});

req.on('error', (error) => {
    console.log(`âŒ Error conectando al backend: ${error.message}`);
});

req.end();