const { spawn } = require('child_process');

console.log('🌟 Verificando API de Star Wars y obteniendo personajes');
console.log('====================================================\n');

const server = spawn('node', ['dist/index.js'], {
  stdio: ['pipe', 'pipe', 'pipe'],
  cwd: process.cwd()
});

let buffer = '';
let requestId = 1;

function sendRequest(method, params = {}) {
  const request = {
    jsonrpc: '2.0',
    id: requestId++,
    method: method,
    params: params
  };
  
  console.log(`📤 Enviando: ${method}`);
  if (Object.keys(params).length > 0) {
    console.log(`   Parámetros:`, JSON.stringify(params, null, 2));
  }
  
  server.stdin.write(JSON.stringify(request) + '\n');
}

server.stdout.on('data', (data) => {
  buffer += data.toString();
  
  const lines = buffer.split('\n');
  buffer = lines.pop();
  
  lines.forEach(line => {
    if (line.trim()) {
      try {
        const response = JSON.parse(line);
        
        if (response.result) {
          if (response.result.serverInfo) {
            console.log('✅ Servidor MCP inicializado\n');
          } else if (response.result.content) {
            console.log('\n📋 Información de la API:\n');
            
            response.result.content.forEach(content => {
              if (content.text) {
                try {
                  const data = JSON.parse(content.text);
                  console.log('🎯 Detalles de la API de Star Wars:');
                  console.log(JSON.stringify(data, null, 2));
                } catch (e) {
                  console.log('📝 Contenido:', content.text);
                }
              }
            });
            
            // Después de obtener info de la API, intentar llamar a un endpoint
            setTimeout(() => {
              console.log('\n🔍 Ahora vamos a intentar acceder a los datos...');
              console.log('ℹ️  Nota: Como Azure APIM puede requerir autenticación,');
              console.log('    vamos a mostrar la estructura de la API y sugerir próximos pasos.\n');
              
              server.kill();
            }, 2000);
            
          }
        } else if (response.error) {
          console.log(`❌ Error: ${response.error.message}`);
          if (response.error.data) {
            console.log('   Detalles:', JSON.stringify(response.error.data, null, 2));
          }
        }
      } catch (e) {
        // Ignorar líneas que no son JSON válidas
      }
    }
  });
});

server.stderr.on('data', (data) => {
  console.log('🚨 Error del servidor:', data.toString());
});

server.on('close', (code) => {
  console.log(`\n📊 Resumen de la API de Star Wars:`);
  console.log(`===============================`);
  console.log(`🎬 La API incluye 6 endpoints principales:`);
  console.log(`   👥 /people - Personajes (Luke, Leia, Han Solo, etc.)`);
  console.log(`   🌍 /planets - Planetas (Tatooine, Alderaan, etc.)`);
  console.log(`   🎭 /films - Películas (Episodios I-VI)`);
  console.log(`   🚗 /vehicles - Vehículos terrestres`);
  console.log(`   🚀 /starships - Naves espaciales`);
  console.log(`   👽 /species - Especies alienígenas`);
  console.log(`\n💡 Para obtener los datos reales:`);
  console.log(`   1. Verificar que la API esté activa en Azure APIM`);
  console.log(`   2. Comprobar si requiere suscripción o clave API`);
  console.log(`   3. Usar el portal de Azure APIM para probar endpoints`);
  console.log(`   4. O usar herramientas como Postman con las credenciales correctas`);
  console.log(`\n🔚 Proceso terminado con código: ${code}`);
});

// Secuencia de comandos
setTimeout(() => {
  sendRequest('initialize', {
    protocolVersion: '2024-11-05',
    capabilities: {},
    clientInfo: { name: 'star-wars-info', version: '1.0.0' }
  });
}, 500);

setTimeout(() => {
  console.log('🌟 Obteniendo información detallada de Star Wars API...');
  sendRequest('tools/call', {
    name: 'get_api',
    arguments: {
      apiId: 'star-wars-api'
    }
  });
}, 3000);