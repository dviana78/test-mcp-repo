{
  "name": "azure-apim-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Azure API Management operations",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "mcp:dev": "node scripts/mcp-launcher.js development",
    "mcp:prod": "node scripts/mcp-launcher.js production",
    "mcp:build": "npm run build && npm run mcp:prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "starwars:characters": "node scripts/starwars/get-starwars-characters.js",
    "starwars:planets": "node scripts/starwars/get-starwars-planets.js",
    "starwars:genders": "node scripts/starwars/analyze-starwars-genders.js",
    "starwars:subscription": "node scripts/starwars/create-starwars-subscription.js",
    "apim:analyze": "node scripts/apim/apim-analyzer.js",
    "apim:test": "node scripts/apim/test-apim-apis.js",
    "tools:list": "node scripts/tools/list-tools.js",
    "tools:detailed": "node scripts/tools/list-tools-detailed.js",
    "tools:list-all": "node scripts/tools/list-all-tools.js",
    "test:subscriptions": "node scripts/test/test-subscription-tools.js",
    "organize": "node scripts/utils/organize-repository.js",
    "utils:credentials": "bash scripts/utils/get-azure-credentials.sh"
  },
  "keywords": ["mcp", "azure", "apim", "api-management", "typescript"],
  "author": "dviana78",
  "license": "MIT",
  "dependencies": {
    "@azure/arm-apimanagement": "^9.1.0",
    "@azure/identity": "^4.0.1",
    "@azure/core-auth": "^1.5.0",
    "@modelcontextprotocol/sdk": "^0.4.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dviana78/test-mcp-repo.git"
  }
}